generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String
    password  String
    address   Address? @relation(fields: [addressId], references: [id])
    addressId Int?
}

model Address {
    id                 Int    @id @default(autoincrement())
    addressDescription String
    user               User[]
}
